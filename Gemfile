source 'https://rubygems.org'

# Framework
gem 'sinatra'
gem 'sinatra-contrib', require: false

# Web Server
gem 'thin'

# Database
gem 'sinatra-activerecord', require: 'sinatra/activerecord'
gem 'sqlite3'

# Flash Messages
gem 'rack-flash3'

# Tools
gem 'rake'

# Debugging
gem 'pry'
gem 'better_errors'
gem 'binding_of_caller'

# Pagination
gem 'pagy', '>= 5.10.1'
