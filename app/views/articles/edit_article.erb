<form class="article-form" action="/article/<%= params[:id] %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <div class="field">
    <label for="article_title">Title</label>
    <input type="text" value="<%= @article.title %>" name="title">
  </div>

  <div class="field">
    <label for="article_folder_id">Folder</label>
    <select name="folder_id">
      <% @folders.each do |folder| %>
        <option value="<%= folder.id %>"<% if folder.id == @this_folder %> selected<% end %>><%= folder.name %></option>
      <% end %>
    </select>
  </div>

  <div class="field">
    <label for="article_link">Link</label>
    <input type="text" value="<%= @article.source_url %>" name="link">
  </div>

  <div class="field">
    <label for="article_body">Body</label>
    <textarea rows="25" name="body"><%= @article.body %></textarea>
  </div>

  <div class="actions">
    <input type="submit" name="commit" value="Update Article">
  </div>
</form>
